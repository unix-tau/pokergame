pipeline {
    agent any
    
    stages {
        stage('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        
        stage('Build') {
            steps {
                // Use Docker to run Maven build with SonarQube analysis
                script {
                    def mavenImage = docker.image('maven:3.3.9-jdk-8')
                    mavenImage.pull()
                    mavenImage.inside {
                        sh 'mvn sonar:sonar \
                            -Dsonar.projectKey=pokergame \
                            -Dsonar.host.url=http://localhost:9000 \
                            -Dsonar.login=965ab45b68c630f977890e23f0c3fa0ab1580dca'
                    }
                }
            }
        }
    }
}

