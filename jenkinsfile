pipeline {
    agent any
    
    tools {
        // Define the Maven tool
        maven 'Maven'
        // Define the JDK tool
        jdk 'JDK'
    }
    
    stages {
        stage('Build') {
            steps {
                // Checkout the source code from your repository
                // You may need to configure your SCM according to your project
                // For example, if you're using Git:
                // git 'https://github.com/your/repository.git'
                
                // Run Maven build with SonarQube analysis
                withSonarQubeEnv('sona-demo') {
                    sh 'mvn sonar:sonar \
                        -Dsonar.projectKey=pokergame \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.login=965ab45b68c630f977890e23f0c3fa0ab1580dca'
                }
            }
        }
    }
}

